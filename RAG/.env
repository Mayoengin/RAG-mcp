# Network RAG System Environment Variables

# System Configuration
ENVIRONMENT=development
DEBUG=true
DATA_DIR=./data
CACHE_DIR=./cache
LOG_DIR=./logs

# Database Configuration (MongoDB)
MONGODB_URI=mongodb://localhost:27017/network_rag
DATABASE_NAME=network_rag
DB_MAX_CONNECTIONS=100
DB_CONNECTION_TIMEOUT=30

# Network API Configuration (placeholder - update with your actual values)
NETWORK_API_URL=http://localhost:3000/api
NETWORK_API_KEY=your_api_key_here
NETWORK_API_TIMEOUT=30
NETWORK_API_MAX_RETRIES=3
NETWORK_API_RATE_LIMIT=100

# LLM Configuration (LM Studio)
LLM_PROVIDER=lm_studio
LM_STUDIO_API_URL=http://localhost:1234
LLM_MODEL_NAME=local-model
LLM_TIMEOUT=30
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Embedding Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_MAX_WORKERS=4
EMBEDDING_CACHING=true
EMBEDDING_BATCH_SIZE=32

# MCP Server Configuration
MCP_SERVER_NAME=NetworkRAG
MCP_SERVER_VERSION=1.0.0
MCP_HOST=localhost
MCP_PORT=8080
ENABLE_REST_API=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_MAX_FILE_SIZE_MB=10
LOG_BACKUP_COUNT=5